<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.practice.comment.dao.CommentDao">
    <!-- board 테이블 전체 컬럼 -->
    <sql id="commentColumns">
        comment_id
        , board_id
        , user_no
        , comment_sub
        , comment_created

    </sql>

    <select id="commentCount" resultType="Integer">
        SELECT count(*) FROM comment WHERE board_id = #{board_id}
    </select>

    <select id="commentSelectDescPage" resultType="com.example.practice.comment.dto.CommentDto">
        SELECT comment.*, USER.user_name
        FROM comment
        JOIN USER ON comment.user_no = USER.user_no
        WHERE board_id = #{board_id}
        ORDER BY comment.comment_id DESC
            LIMIT #{startRow}, #{size}
    </select>

    <insert id="commentInsert" parameterType="com.example.practice.comment.dto.CommentDto">
        INSERT INTO comment ( board_id, user_no, comment_sub ) VALUES (
        #{board_id},
        #{user_no},
        #{comment_sub}
        )
    </insert>
    <update id="commentUpdate" parameterType="com.example.practice.comment.dto.CommentDto">
        UPDATE comment
        SET comment_sub = #{comment_sub}
        WHERE comment_id = #{comment_id}
    </update>
    <delete id="commentDelete" parameterType="int">
        DELETE FROM comment WHERE comment_id = #{comment_id}
    </delete>
</mapper>
