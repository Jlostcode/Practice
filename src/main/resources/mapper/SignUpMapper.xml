<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.practice.signUp.dao.SignUpDao">
<!-- user 테이블 전체 컬럼 -->
    <sql id="signUpColumns">
          user_name
        , user_tel
        , user_id
        , user_pw
        , user_gen
        , user_signdate
    </sql>
    <insert id="signUpUser" parameterType="com.example.practice.signUp.dto.SignUpDto">
        INSERT INTO user (
        	<include refid="signUpColumns"/>
        ) VALUES (
        	#{user_name},
        	#{user_tel},
        	#{user_id},
        	#{user_pw},
        	#{user_gen},
        	now()
        )
    </insert>
</mapper>
